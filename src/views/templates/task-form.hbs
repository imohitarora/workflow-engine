<!DOCTYPE html>
<html>
<head>
    <title>{{task.config.form.title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .task-form {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            background-color: #fff;
        }
        .form-label {
            font-weight: 500;
        }
        .input-group {
            margin-bottom: 1rem;
        }
        .task-info {
            background-color: #f8f9fa;
            padding: 1rem;
            margin-bottom: 2rem;
            border-radius: 0.25rem;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container">
        <div class="task-form">
            <div class="task-info">
                <h4>{{task.config.form.title}}</h4>
                <p class="text-muted">Business ID: {{task.businessId}}</p>
                <p class="text-muted">Workflow ID: {{task.workflowInstanceId}}</p>
            </div>

            <form action="/views/tasks/{{task.id}}/complete" method="POST">
                {{#each formConfig.fields}}
                    <div class="mb-3">
                        <label class="form-label">{{this.label}}</label>
                        
                        {{#if (eq this.type "text")}}
                            {{#if this.multiline}}
                                <textarea class="form-control" name="{{this.name}}" 
                                    {{#if this.required}}required{{/if}}
                                    rows="4"></textarea>
                            {{else}}
                                <input type="text" class="form-control" name="{{this.name}}"
                                    {{#if this.required}}required{{/if}}
                                    {{#if this.pattern}}pattern="{{this.pattern}}"{{/if}}>
                            {{/if}}
                        {{/if}}

                        {{#if (eq this.type "number")}}
                            <input type="number" class="form-control" name="{{this.name}}"
                                {{#if this.required}}required{{/if}}
                                {{#if this.min}}min="{{this.min}}"{{/if}}
                                {{#if this.max}}max="{{this.max}}"{{/if}}
                                {{#if this.step}}step="{{this.step}}"{{/if}}>
                        {{/if}}

                        {{#if (eq this.type "boolean")}}
                            <select class="form-select" name="{{this.name}}"
                                {{#if this.required}}required{{/if}}>
                                <option value="">Select...</option>
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                        {{/if}}

                        {{#if (eq this.type "select")}}
                            <select class="form-select" name="{{this.name}}"
                                {{#if this.required}}required{{/if}}>
                                <option value="">Select...</option>
                                {{#each this.options}}
                                    <option value="{{this.value}}">{{this.label}}</option>
                                {{/each}}
                            </select>
                        {{/if}}

                        {{#if this.patternError}}
                            <div class="form-text">{{this.patternError}}</div>
                        {{/if}}
                    </div>
                {{/each}}

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary">Complete Task</button>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal">
                        Reject Task
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Reject Modal -->
    <div class="modal fade" id="rejectModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Reject Task</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/views/tasks/{{task.id}}/reject" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Rejection Reason</label>
                            <textarea class="form-control" name="reason" required rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Reject</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Show/hide conditional fields based on other field values
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const fields = form.elements;

            function updateConditionalFields() {
                const formData = Object.fromEntries(new FormData(form));
                
                {{#each formConfig.fields}}
                    {{#if this.showIf}}
                        const el = document.querySelector('[name="{{this.name}}"]').closest('.mb-3');
                        const show = eval('(' + JSON.stringify(formData) + ',' + '{{this.showIf}})');
                        el.style.display = show ? 'block' : 'none';
                    {{/if}}
                {{/each}}
            }

            Array.from(fields).forEach(field => {
                field.addEventListener('change', updateConditionalFields);
            });

            // Initial update
            updateConditionalFields();
        });
    </script>
</body>
</html>
