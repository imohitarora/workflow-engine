<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Stats Section -->
    <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold mb-4">Dashboard Statistics</h2>
        <div class="grid grid-cols-2 gap-4">
            <div class="bg-blue-50 p-4 rounded-lg">
                <div class="text-sm text-blue-600">Active Workflows</div>
                <div class="text-2xl font-bold text-blue-800">{{stats.activeWorkflows}}</div>
            </div>
            <div class="bg-yellow-50 p-4 rounded-lg">
                <div class="text-sm text-yellow-600">Pending Approvals</div>
                <div class="text-2xl font-bold text-yellow-800">{{stats.pendingApprovals}}</div>
            </div>
        </div>
    </div>

    <!-- Pending Tasks Section -->
    <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold mb-4">Pending Tasks</h2>
        {{#if pendingTasks.length}}
            <div class="space-y-3">
                {{#each pendingTasks}}
                    <div class="flex justify-between items-center border-b pb-2">
                        <div>
                            <div class="font-medium">{{type}}</div>
                            <div class="text-sm text-gray-500">{{summary}}</div>
                        </div>
                        <div class="flex space-x-2">
                            <form action="/tasks/{{id}}/approve" method="POST" class="inline">
                                <button type="submit" 
                                        class="bg-green-500 text-white px-3 py-1 rounded hover:bg-green-600">
                                    Approve
                                </button>
                            </form>
                            <form action="/tasks/{{id}}/reject" method="POST" class="inline">
                                <button type="submit" 
                                        class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600">
                                    Reject
                                </button>
                            </form>
                        </div>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <div class="text-gray-500 text-center py-4">No pending tasks</div>
        {{/if}}
    </div>
</div>

<!-- Recent Activities Section -->
<div class="mt-6 bg-white rounded-lg shadow p-6">
    <h2 class="text-xl font-semibold mb-4">Recent Activities</h2>
    {{#if activities.length}}
        <div class="space-y-3">
            {{#each activities}}
                <div class="flex items-center border-b pb-2">
                    <div class="flex-1">
                        <div class="font-medium">{{description}}</div>
                        <div class="text-sm text-gray-500">{{formatDate timestamp}}</div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <div class="text-gray-500 text-center py-4">No recent activities</div>
    {{/if}}
</div>
